<!DOCTYPE html>
<html>
<head>
	<title>Message Board</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
	<div class="container">
		<h1 class="display-4">The Dojo Message Board</h1>
		<hr>
		<% if(messages.registration) { %>
	        <% for (var x of messages.registration) { %>
	        <h3 style="color: red"><%= x %></h3>
	        <% } %>
    	<% } %>
		<form action="/post_message" method="post">
	      <div class="form-group">
	        <label for="exampleFormControlInput1"><i>Name</i></label>
	        <input type="text" class="form-control" id="exampleFormControlInput1" name="name">
	      </div>
	      <div class="form-group">
	        <label for="exampleFormControlTextarea1"><i>Message</i></label>
	        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="message"></textarea>
	      </div>
	      <button type="submit" class="btn btn-outline-danger">Post The Message!</button>
	    </form>
	    <% for (let i of m_data ) { %>
	    <dir class="message">
	    	<p><b>Name:</b> <%= i.name %></p>
	    	<p><b>Message:</b> <%= i.content %></p>
	    </dir>
	    <% if ( i.comments ) { %>
	    <% for (let j of i.comments ) { %>
	    <div class="comment" style="color: blue">
	    	<p><b>Name:</b> <%= j.name %></p>
	    	<p><b>Comment:</b> <%= j.content %></p>
	    </div>
	    <% } %>
	    <% } %>
	    <form action="/post_comment" method="post">
	      <div class="form-group">
	      	<input type="hidden" name="message_id" value="<%= i._id %>">
	        <label for="exampleFormControlInput1"><i>Name:</i> </label>
	        <input type="text" class="form-control" id="exampleFormControlInput1" name="name">
	      </div>
	      <div class="form-group">
	        <label for="exampleFormControlTextarea1"><i>Comment:</i> </label>
	        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comment"></textarea>
	      </div>
	      <button type="submit" class="btn btn-outline-danger">Post The Comment!</button>
	    </form>
	    <% } %>
	</div>
</body>
</html>